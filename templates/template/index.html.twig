      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <div class="container py-4">

    <div class="row">

        <div class="col-lg-3">


            <div class="list-group " style="margin-top: 12px">
                <h5 class="my-4 text-secondary "> Alle Kategorien</h5>
                {% for category in categories %}
                    <a href="{{ path('category',{id:category.id}) }}" class="list-group-item">{{ category.name }}</a>
                {% endfor %}

            </div>
                <hr class="separator">

            <div class="list-group">
                <h5 class="my-4 text-secondary"> bliebte Tags</h5>
                {% for tag in tags %}
                    <a href="{{ path('tag',{id:tag.id}) }}" class="list-group-item">{{ tag.name }}</a>
                {% endfor %}

            </div>
        </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

          <h3 class="text-secondary text-center py-4">Lektionen und Videos</h3>
        <div class="row">



         {% for video in videos %}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
             <video width="230" height="150" controls>
                  <source src="/uploads/{{video.image}}" type="video/mp4">
                </video>
              <div class="card-body">
                <h5 class="card-title">
                  <a href="{{ path('single',{id:video.id}) }}">{{ video.title }}</a>
                </h5>

                <p class="card-text" >{{ video.content|slice(0,70)}}</p>

              </div>
              <div class="card-footer">
                  <div class="card-category">
                    <a class="float-right" href="{{path('category',{id:video.category.id})}}">
                        {{ video.category }}
                    </a>
                  </div>
                <small class="text-muted">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                </small>
              </div>
            </div>
          </div>
        {% endfor %}

        </div>
        <!-- /.row -->
          <div class="pagination">
              <a href="#" class="btn btn-outline-success btn-sm">Prev</a>
              <a href="{{ path('template',{limit:12})}}" class="btn btn-outline-success btn-sm">Next</a>
          </div>
      </div>
      <!-- /.col-lg-9 -->


    </div>
    <!-- /.row -->
<hr class="separator">
